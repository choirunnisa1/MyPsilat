<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_green"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    tools:context=".LapanganActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/back_button"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_vertical"
        android:text="Lapangan atau Gelanggang"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back_button"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/long_seputar"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lapangan"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <com.codesgood.views.JustifiedTextView
            android:layout_marginTop="10dp"
            android:text="Ukuran Lapangan atau Gelanggang Pencak Silat :"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Luas "
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_light"
                android:layout_width="260dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/luas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  : 10 m2"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_light"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Panjang dan Lebar "
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_light"
                android:layout_width="260dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  : 10 m"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_light"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Lingkaran Tengah dengan diameter "
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_light"
                android:layout_width="260dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  : 8 m"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_light"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Lingakaran kedua dengan diameter "
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_light"
                android:layout_width="260dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  : 8 m"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_light"/>
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>