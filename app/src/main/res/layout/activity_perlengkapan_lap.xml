<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_green"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    tools:context=".PerlengkapanLapActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/back_button"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_vertical"
        android:text="Perlengkapan Gelanggang"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back_button"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/long_seputar"
        android:orientation="vertical"
        android:padding="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="1.   "
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="Matras"
                        android:textColor="@color/white"
                        android:textSize="14sp"></com.codesgood.views.JustifiedTextView>
                </LinearLayout>

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/matras" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="2.  "
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="Meja dan kursi juri"
                        android:textColor="@color/white"
                        android:textSize="14sp"></com.codesgood.views.JustifiedTextView>
                </LinearLayout>

                <ImageView
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/meja_kursi"
                    android:layout_width="200dp"
                    android:layout_height="150dp"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="3.  "
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="Formulir pertandingan"
                        android:textColor="@color/white"
                        android:textSize="14sp"></com.codesgood.views.JustifiedTextView>
                </LinearLayout>

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/formulir_tanding"
                    android:layout_width="200dp"
                    android:layout_height="150dp"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="4.  "
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="Alat tulis"
                        android:textColor="@color/white"
                        android:textSize="14sp"></com.codesgood.views.JustifiedTextView>
                </LinearLayout>

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/alat_tulis"
                    android:layout_width="200dp"
                    android:layout_height="150dp"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="5.  "
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="Papan Infomasi dan Nilai"
                        android:textColor="@color/white"
                        android:textSize="14sp"></com.codesgood.views.JustifiedTextView>
                </LinearLayout>

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/papan_info"
                    android:layout_width="200dp"
                    android:layout_height="150dp"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="6.  "
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="Lampu babak"
                        android:textColor="@color/white"
                        android:textSize="14sp"></com.codesgood.views.JustifiedTextView>
                </LinearLayout>

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/lampu_babak"
                    android:layout_width="200dp"
                    android:layout_height="150dp"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="7.  "
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="Bendera kecil berwarna merah dan biru"
                        android:textColor="@color/white"
                        android:textSize="14sp"></com.codesgood.views.JustifiedTextView>
                </LinearLayout>
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/bendera_kuning"
                    android:layout_width="200dp"
                    android:layout_height="150dp"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="8.  "
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>

                    <com.codesgood.views.JustifiedTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_light"
                        android:text="Timbangan"
                        android:textColor="@color/white"
                        android:textSize="14sp"></com.codesgood.views.JustifiedTextView>
                </LinearLayout>

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/timbangan"
                    android:layout_width="200dp"
                    android:layout_height="150dp"/>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>