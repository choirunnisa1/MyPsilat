<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_green"
    tools:context=".TentangActivity">
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_back_black_24dp" />
    <TextView
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/back_button"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Tentang"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/background_tek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/profil"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Tri Mukti Bagaskara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="17230130"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Pendidikan Jasmani, Kesehatan dan Rekreasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_tek"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"

                android:textSize="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Biodata Singkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_baseline_date_range_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Kendal, 13 April 1999"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_baseline_email_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="baskaramukti4@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_baseline_call_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="087700578569"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            </LinearLayout>







        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/background_tek"
          android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Informasi Aplikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.codesgood.views.JustifiedTextView
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/poppins_light"
                android:text="    My Psilat Up Games merupakan suatu aplikasi yang digunakan sebagai media pembelajaran mata pelajaran PJOK materi olahraga beladiri pencak silat."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.codesgood.views.JustifiedTextView
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/poppins_light"
                android:layout_marginTop="5dp"
                android:text="  Aplikasi ini diharapkan dapat dijadikan sebagai alternatif media pembelajaran mata pelajaran PJOK materi olahraga beladiri pencak silat di sekolah."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>